---
import Nav from './Nav.astro'

const { theme } = Astro.props;
---

<header id="header">
    <p id="header__title">
        <a id="header__title__link" class={`theme-${theme}`} href="/">wick3dr0se</a>
    </p>
    <a id="avatar" href="https://github.com/wick3dr0se">
        <img id="avatar__img" src="https://github.com/wick3dr0se.png" alt="wick3dr0se avatar"/>
    </a>
    <Nav theme={theme}/>
</header>

<style lang="scss">
    @import '../common.css';

    #header {
        position: fixed;
        top: 0;
        left: 0;
        width: 30%;
        height: 100vh;
        overflow-y: auto;
        box-sizing: border-box;
        padding: 0 2%;
        background-color: var(--mantle);
        box-shadow: 0 1px 5px #00000096;
        &__title {
            text-align: center;
            font-family: "Pacifico", cursive;
            font-size: 5vw;
            font-weight: 400;
            font-style: normal;
            &__link {
                position: relative;
                background: none;
                text-decoration: none;
                &::after {
                content: '';
                position: absolute;
                bottom: -1px;
                left: 0;
                width: 100%;
                height: 1px;
                background-color: var(--red);
                opacity: 0;
                transition: opacity 0.3s ease;
                }
                &:hover::after {
                    opacity: 1;
                }
            }
            .theme-dark {
                color: var((--text));
            }
            .theme-light {
                color: var(--crust);
            }
        }
        #avatar {
            width: 80%;
            display: block;
            margin: 0 auto;
            border-radius: 100%;
            transition: transform 0.3s ease-in-out;
            &:hover {
                transform: scale(1.1);
            }
            &__img {
                box-sizing: border-box;
                width: 100%;
                animation: shake 0.7s infinite alternate;
            }
        }
    }
    @keyframes shake {
        0% {
            transform: rotate(5deg);
        }
        100% {
            transform: rotate(-5deg);
        }
    }
</style>