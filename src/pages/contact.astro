---
import Layout from '../layouts/Layout.astro';
import Form from '../components/Form.astro';
import { Github, Mastodon, Lemmy, Reddit, Discord } from 'simple-icons-astro';
---

<Layout title="Contact">
    <main id="main">
        <section id="platforms">
            <a href="https://github.com/wick3dr0se/"><Github id="platforms__github" class="icon"/></a>
            <a href="https://fosstodon.org/@wick3dr0se/"><Mastodon id="platforms__mastodon" class="icon"/></a>
            <a href="https://lemmy.ml/u/wick3dr0se/"><Lemmy id="platforms__lemmy" class="icon"/></a>
            <a href="https://reddit.com/user/wick3dr0se/"><Reddit id="platforms__reddit" class="icon"/></a>
            <a href="https://discord.com/invite/DCznYuU4Ms"><Discord id="platforms__discord" class="icon"/></a>
        </section>
        <hr/>
        <Form id="form"/>
    </main>
</Layout>

<style lang="scss">
    #platforms {
        display: flex;
        justify-content: space-around;
        &__github {
            color: #181717;
        }
        &__mastodon {
            color: #3088D4;
        }
        &__lemmy {
            color: black;
        }
        &__reddit {
            color: #FF4500;
        }
        &__discord {
            color: #7289DA;
        }
        a *:hover {
            filter: invert(40%);
        }
    }
</style>